<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Playground</h1>
    <div class="col-6 offset-3">
        <form action="/playgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="playground[title]" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="playground[location]" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- Add list for all the equipment options. NOT YET READY -->
            <div class="accordion mb-3" id="equipmentAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" 
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Equipment available in playground (select multiple by holding down CTRL)
                    </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" 
                        data-bs-parent="#equipmentAccordion">
                        <% const equipment = [
                            'Swing',
                            'Slide',
                            'Sandbox',
                            'Baby Swing',
                            'Seesaw',
                            'Carousel',
                            'Climbing',
                            'Bench',
                            'Web Swing' 
                        ] %>
                        <select class="form-select" name="playground[equipment]" multiple aria-label="multiple select example">
                            <% for (value of equipment) { %>
                            <option value="<%= value %>"><%= value %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-3 border">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="playground[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add playground</button>
            </div>
        </form>
        <a href="/playgrounds">Back to all playgrounds</a>
    </div>
</div>